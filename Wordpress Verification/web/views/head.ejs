  <script>
    // Function to clear the session and cookie
    function clearSessionAndCookie() {
      // Clear the session storage (you can add more steps here if needed)
      sessionStorage.clear();
  
      // Clear the cookie
      document.cookie =
        "verifier_sessionId=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";
  
      // Navigate to the verification page
      window.location.href = "/verification";
    }
  
    // Check if the cookie is present (replace 'your_cookie_name' with your actual cookie name)
    const isCookiePresent = document.cookie.includes("verifier_sessionId");
  
    // Get the navigation list and the logout button element
    const navList = document.getElementById("navList");
    const logoutBtn = document.getElementById("logoutBtn");
  
    // If the cookie is present, show the logout button and remove login/register buttons
    if (isCookiePresent) {
      // Show the logout button
      logoutBtn.style.display = "block";
  
      // Remove the login and register buttons
      const loginNavItem = navList.querySelector('a[href="/verification"]');
      const registerNavItem = navList.querySelector('a[href="/verif-register"]');
  
      if (loginNavItem) {
        loginNavItem.parentElement.remove();
      }
      if (registerNavItem) {
        registerNavItem.parentElement.remove();
      }
    }
  
    // Add event listener to the logout button
    logoutBtn.addEventListener("click", function (event) {
      event.preventDefault(); // Prevent the default behavior of the link
      // Clear the session and cookie
      clearSessionAndCookie();
    });
  </script>
  